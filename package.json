{
  "private": true,
  "scripts": {
    "install": "ncu -u && npm update && docker build -t my-blog-mkdocs-material:latest .",
    "start": "docker run --rm -it -p 8000:8000 --user $(id -u):$(id -g) -v ${PWD}:/docs --name my-blog-mkdocs-material-dev my-blog-mkdocs-material",
    "stop": "docker stop my-blog-mkdocs-material-dev",
    "test": "textlint docs",
    "generate": "docker run --rm --user $(id -u):$(id -g) -e EXCLUDE_DOCS='drafts/' -v ${PWD}:/docs my-blog-mkdocs-material build",
    "postgenerate": "cd ./site && python3 -m http.server 8001"
  },
  "devDependencies": {
    "npm-check-updates": "^16.14.6",
    "textlint": "^13.3.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-engineering-paper": "^1.0.4",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^8.0.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  },
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.1"
  }
}
