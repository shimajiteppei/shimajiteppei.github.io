{
    "private": true,
    "scripts": {
        "preinstall": "rm -rf ./node_modules",
        "install": "npm install --ignore-scripts",
        "postinstall": "run-s tool:husky",
        "start": "run-s docs:build:dev docs:stop_serve docs:start_serve",
        "stop": "run-s docs:stop_serve",
        "test": "run-s -c tool:format tool:lint tool:check_dead_link",
        "build": "run-s docs:build:prd",
        "docs:build:dev": "docker compose run --rm --build --user $(id -u):$(id -g) mkdocs build",
        "docs:build:prd": "docker compose run --rm --build --user $(id -u):$(id -g) -e EXCLUDE_DOCS='template/' mkdocs build",
        "docs:start_serve": "http-server ./site -p 8001 &",
        "docs:stop_serve": "pids=$(lsof -t -i:8001); [ -z $pids ] || kill -9 $pids",
        "tool:gen_xp-css": "sh src/scripts/xp-css/run.sh",
        "tool:gen_rss": "sh src/scripts/rss/run.sh",
        "tool:gen_webp": "sh src/scripts/webp/run.sh",
        "tool:format": "prettier . --write",
        "tool:lint": "textlint docs",
        "tool:check_dead_link": "find docs -type f -not -path '*/drafts/*' -name '*.md' ! -name 'rss.md' -print0 | xargs -0 -n1 npx markdown-link-check --quiet --config markdown-link-check.json",
        "tool:husky": "husky"
    },
    "devDependencies": {
        "http-server": "latest",
        "husky": "latest",
        "lint-staged": "latest",
        "markdown-link-check": "latest",
        "npm-run-all": "latest",
        "prettier": "latest",
        "sass": "latest",
        "textlint": "latest",
        "textlint-filter-rule-comments": "latest",
        "textlint-rule-preset-ja-engineering-paper": "latest",
        "textlint-rule-preset-ja-spacing": "latest",
        "textlint-rule-preset-ja-technical-writing": "latest",
        "textlint-rule-preset-smarthr": "latest"
    },
    "lint-staged": {
        "*": "npm run tool:format"
    },
    "volta": {
        "node": "25.2.1",
        "npm": "11.7.0"
    }
}
